# Database URL for PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/partypilot?schema=public"

# API Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
APP_URL=http://localhost:3000

# Security (REQUIRED)
JWT_SECRET=your-secret-key-change-this-in-production-use-openssl-rand-base64-32

# Cron Job Security (REQUIRED for Vercel Cron)
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-change-this-in-production

# OpenAI API Key for LLM-based planning (REQUIRED for AI features)
OPENAI_API_KEY=

# Sentry DSN for error tracking (Optional but recommended)
SENTRY_DSN=

# Logging
LOG_LEVEL=info
