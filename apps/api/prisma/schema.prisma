// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trips Trip[]
}

model Trip {
  id           String   @id @default(cuid())
  userId      String
  title       String
  city        String
  dateStart   DateTime
  dateEnd     DateTime
  groupSizeMin Int
  groupSizeMax Int
  occasion    String
  budgetLevel String
  status      String   // "draft" | "planned" | "confirmed" | "completed"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  events       Event[]
  reservations Reservation[]
  notifications Notification[]
  shareLinks   ShareLink[]
}

model Venue {
  id               String   @id @default(cuid())
  name             String
  address          String
  city             String
  lat              Float?
  lng              Float?
  bookingType      String   // "none" | "api" | "deeplink" | "webview_form" | "manual"
  bookingProvider  String?  // "opentable" | "resy" | "sevenrooms" | "custom" | null
  bookingUrl       String?
  phone            String?
  website          String?
  rating           Float?
  priceLevel       String?  // "$" | "$$" | "$$$" | "$$$$"
  dressCodeSummary String?
  groupFriendly    Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  events       Event[]
  reservations Reservation[]
}

model Event {
  id        String   @id @default(cuid())
  tripId    String
  venueId   String?
  orderIndex Int
  type      String   // "meetup" | "meal" | "bar" | "club" | "transit" | "other"
  title     String
  description String?
  startTime DateTime
  endTime   DateTime
  isPrimary Boolean  @default(true) // true for main plan, false for backup
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trip         Trip          @relation(fields: [tripId], references: [id])
  venue        Venue?        @relation(fields: [venueId], references: [id])
  reservations Reservation[]
}

model Reservation {
  id                    String   @id @default(cuid())
  tripId               String
  eventId              String
  venueId              String
  method               String   // "api" | "deeplink" | "webview_form" | "manual"
  bookingProvider      String?
  providerReservationId String?
  nameOnReservation    String
  partySize            Int
  reservedTime         DateTime
  status               String   // "pending" | "link_ready" | "requested" | "confirmed" | "cancelled" | "failed"
  rawPayload           Json?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  trip  Trip   @relation(fields: [tripId], references: [id])
  event Event  @relation(fields: [eventId], references: [id])
  venue Venue  @relation(fields: [venueId], references: [id])
}

model Notification {
  id          String   @id @default(cuid())
  tripId      String
  type        String   // "weather_check" | "headcount" | "leave_now" | "dress_code" | "generic"
  scheduledFor DateTime
  status      String   // "scheduled" | "sent" | "cancelled"
  channel     String   // "push" | "email" | "sms"
  payload     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trip Trip @relation(fields: [tripId], references: [id])
}

model ShareLink {
  id        String    @id @default(cuid())
  tripId   String
  slug     String    @unique
  expiresAt DateTime?
  createdAt DateTime @default(now())

  trip Trip @relation(fields: [tripId], references: [id])
}
