// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trips Trip[]
}

model Trip {
  id            String   @id @default(cuid())
  userId        String
  title         String
  city          String
  dateStart     DateTime
  dateEnd       DateTime
  groupSizeMin  Int
  groupSizeMax  Int
  occasion      String
  budgetLevel   String
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  events        Event[]
  reservations  Reservation[]
  notifications Notification[]
  shareLinks    ShareLink[]
}

model Venue {
  id              String   @id
  name            String
  address         String
  city            String
  lat             Float?
  lng             Float?
  bookingType     String
  bookingProvider String?
  bookingUrl      String?
  phone           String?
  website         String?
  rating          Float?
  priceLevel      String?
  dressCodeSummary String?
  groupFriendly   Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  events        Event[]
  reservations  Reservation[]
}

model Event {
  id          String   @id @default(cuid())
  tripId      String
  venueId     String?
  orderIndex  Int
  type        String
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  isPrimary   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trip         Trip          @relation(fields: [tripId], references: [id], onDelete: Cascade)
  venue        Venue?        @relation(fields: [venueId], references: [id], onDelete: SetNull)
  reservations Reservation[]
}

model Reservation {
  id                   String    @id @default(cuid())
  tripId               String
  eventId              String
  venueId              String
  method               String
  bookingProvider      String?
  providerReservationId String?
  nameOnReservation    String
  partySize            Int
  reservedTime         DateTime
  status               String
  rawPayload           Json?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
  event  Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  venue  Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)
}

model Notification {
  id          String   @id @default(cuid())
  tripId      String
  type        String
  scheduledFor DateTime
  status      String
  channel     String
  payload     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

model ShareLink {
  id        String    @id @default(cuid())
  tripId    String
  slug      String    @unique
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
}
